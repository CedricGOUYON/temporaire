{
  "name": "fullstack-starter-kit",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -c green,yellow -t \"HH:mm:ss\" -p \"{name} {time}\" \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --prefix client -- --host",
    "dev:server": "npm run dev --prefix server"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/react": "^19.1.8",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
